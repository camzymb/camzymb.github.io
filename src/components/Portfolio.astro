---
import { Image } from 'astro:assets';

interface PortfolioItem {
    title: string;
    description: string;
    image: string;
}

const portfolioItems: PortfolioItem[] = [
    {
        title: "Banner Sample Made for Charge AS",
        description: "A platform of growth and inclusion",
        image: "/src/images/charge-banner.jpg"
    },
    {
        title: "Promotional Video Content for Charge's Demo Day",
        description: "Showcasing the impact of our work",
        image: "/src/images/charge-promo-video.jpg"
    },
    {
        title: "Ad Video for Charge 2024 Cohort Application",
        description: "A program that can help enhance",
        image: "/src/images/charge-ad-video.jpg"
    }
];
---

<section class="py-16 px-4 bg-gradient-to-r from-pink-100 to-orange-100">
    <div class="container mx-auto">
        <h2 class="text-4xl font-frankfurter text-center mb-12">PORTFOLIO HIGHLIGHTS</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {portfolioItems.map((item) => (
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <Image src={item.image} alt={item.title} width={400} height={300} class="w-full h-48 object-cover" />
                    <div class="p-4">
                        <h3 class="font-frankfurter text-xl mb-2">{item.title}</h3>
                        <p class="font-schoolbell text-gray-600">{item.description}</p>
                        <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-full font-frankfurter hover:bg-blue-600 transition duration-300">See More</button>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
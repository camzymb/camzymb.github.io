---
import { Image } from 'astro:assets';

interface Service {
    title: string;
    description: string;
    image: string;
}

const services: Service[] = [
    {
        title: "VIDEO CREATION",
        description: "Engage your audience with professionally crafted videos tailored for social media",
        image: "/src/images/video-creation.jpg"
    },
    {
        title: "DESIGNING BANNERS AND FLYERS",
        description: "Create banners and banners for events",
        image: "/src/images/design-banners.jpg"
    },
    {
        title: "SOCIAL MEDIA STRATEGY",
        description: "Develop a winning social media strategy that aligns with your business goals",
        image: "/src/images/social-media-strategy.jpg"
    }
];
---

<section class="py-16 px-4 bg-gradient-to-r from-blue-100 to-green-100">
    <div class="container mx-auto">
        <h2 class="text-4xl font-frankfurter text-center mb-12">SERVICES OVERVIEW</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {services.map((service) => (
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <Image src={service.image} alt={service.title} width={400} height={300} class="w-full h-48 object-cover" />
                    <div class="p-4">
                        <h3 class="font-frankfurter text-xl mb-2">{service.title}</h3>
                        <p class="font-schoolbell text-gray-600">{service.description}</p>
                        <button class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-full font-frankfurter hover:bg-blue-600 transition duration-300">See More</button>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
---
import { Image } from 'astro:assets';

interface Testimonial {
    content: string;
    author: string;
    image: string;
}

const testimonials: Testimonial[] = [
    {
        content: "Working with Tarsier Digital was a game-changer for our social media presence.",
        author: "Hawi and Lacky, Step Fusion",
        image: "/src/images/step-fusion.png"
    },
    {
        content: "Tarsier Digital's strategies significantly improved our online engagement.",
        author: "Zhanel, Dog Anatomy Series",
        image: "/src/images/dog-anatomy.png"
    },
    {
        content: "Tarsier Digital transformed our online presence with their innovative strategies.",
        author: "Alex, Tech Innovators Inc.",
        image: "/src/images/tech-innovators.png"
    }
];

const testimonials1 = JSON.stringify(testimonials);
---

<section class="py-16 px-4 bg-gradient-to-r from-blue-100 to-purple-100">
    <div class="container mx-auto">
        <h2 class="text-4xl font-frankfurter text-center mb-8">TESTIMONIALS</h2>
        <p class="text-xl font-schoolbell text-center mb-12">Hear what our clients have to say about our work</p>
        
        <!-- Desktop view (grid layout) -->
        <div class="hidden md:grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {testimonials.map((testimonial) => (
                <div class="bg-white rounded-lg shadow-lg p-8 flex flex-col items-center">
                    <Image src={testimonial.image} alt={testimonial.author} width={100} height={100} class="rounded-full mb-4" />
                    <p class="text-lg mb-4 text-center">{testimonial.content}</p>
                    <p class="font-bold">{testimonial.author}</p>
                    <div class="flex mt-4">
                        {[...Array(5)].map((_, i) => (
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                            </svg>
                        ))}
                    </div>
                </div>
            ))}
        </div>

        <!-- Mobile view (carousel) -->
        <div class="md:hidden relative" x-data={`{ currentTestimonial: 0, testimonials: ${testimonials1} }`}>
            <div class="overflow-hidden">
                <div class="flex transition-transform duration-300 ease-in-out" :style="`transform: translateX(-${currentTestimonial * 100}%)`">
                    {testimonials.map((testimonial, index) => (
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="bg-white rounded-lg shadow-lg p-8 flex flex-col items-center">
                                <Image src={testimonial.image} alt={testimonial.author} width={100} height={100} class="rounded-full mb-4" />
                                <p class="text-lg mb-4 text-center">{testimonial.content}</p>
                                <p class="font-bold">{testimonial.author}</p>
                                <div class="flex mt-4">
                                    {[...Array(5)].map((_, i) => (
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                    ))}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
            <button @click="currentTestimonial = (currentTestimonial - 1 + testimonials.length) % testimonials.length" class="absolute top-1/2 left-4 transform -translate-y-1/2 bg-white rounded-full p-2 shadow-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <button @click="currentTestimonial = (currentTestimonial + 1) % testimonials.length" class="absolute top-1/2 right-4 transform -translate-y-1/2 bg-white rounded-full p-2 shadow-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        </div>
    </div>
</section>
---
import { Image } from 'astro:assets';
import tarsierLogo from '../images/tarsier-logo.png';
---

<header>
    <div class="logo">
        <Image src={tarsierLogo} alt="Tarsier Digital Solutions Logo" width={50} height={50} />
        <h1 class="frankfurter">TARSIER DIGITAL Solutions</h1>
    </div>
    <nav>
        <a href="#home" class="frankfurter">HOME</a>
        <a href="#about" class="frankfurter">ABOUT US</a>
        <a href="#services" class="frankfurter">SERVICES</a>
        <a href="#portfolio" class="frankfurter">PORTFOLIO</a>
        <a href="#blog" class="frankfurter">BLOG</a>
    </nav>
</header>

<style>
    header {
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .logo {
        display: flex;
        align-items: center;
    }
    .logo img {
        margin-right: 10px;
    }
    .logo h1 {
        font-size: 24px;
        margin: 0;
    }
    nav a {
        margin-left: 20px;
        text-decoration: none;
        color: #333;
        font-size: 18px;
    }
</style>
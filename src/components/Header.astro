---
import { Image } from 'astro:assets';
import tarsierLogo from '../images/tarsier-logo.png';

interface NavItem {
    href: string;
    text: string;
}

const navItems: NavItem[] = [
    { href: "#home", text: "HOME" },
    { href: "#about", text: "ABOUT US" },
    { href: "#services", text: "SERVICES" },
    { href: "#portfolio", text: "PORTFOLIO" },
    { href: "#blog", text: "BLOG" },
];
---

<header x-data="{ open: false }" class="p-5 flex justify-between items-center">
    <div class="flex items-center">
        <Image src={tarsierLogo} alt="Tarsier Digital Solutions Logo" width={120} height={120} />
        <div class="flex flex-col items-start ml-2">
            <h1 class="font-frankfurter text-4xl m-0 leading-none [-webkit-text-stroke:0.5px_#333] [paint-order:stroke_fill]">
                TARSIER DIGITAL
            </h1>
            <span class="font-schoolbell text-3xl mt-[-5px]">Solutions</span>
        </div>
    </div>
    <nav class="hidden md:flex gap-5">
        {navItems.map((item) => (
            <a href={item.href} class="font-frankfurter text-2xl text-gray-800 no-underline whitespace-nowrap">
                {item.text}
            </a>
        ))}
    </nav>
    <button @click="open = !open" class="md:hidden">Menu</button>
    <div x-show="open" class="absolute top-full left-0 right-0 bg-white md:hidden">
        {navItems.map((item) => (
            <a href={item.href} class="block py-2 px-4 font-frankfurter text-2xl text-gray-800 no-underline">
                {item.text}
            </a>
        ))}
    </div>
</header>
---
const { title } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
	<link href="https://fonts.googleapis.com/css2?family=Schoolbell&family=League+Spartan:wght@400;700&display=swap" rel="stylesheet">

    <style is:global>
        @font-face {
            font-family: 'Frankfurter Highlight';
            src: url('/src/fonts/frankfurter-highlight.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }
		@font-face {
			font-family: 'Frankfurter Medium';
			src: url('/src/fonts/frankfurter-medium.ttf') format('opentype');
			font-weight: normal;
			font-style: normal;
			font-display: swap;
		}

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(to right, 
                #ffffff, #ffe0e5, #ffcccb, #ffd8b1, #f5cb83
            );
            background-attachment: fixed;
            color: #333;
        }
        .frankfurter {
            font-family: 'Frankfurter Highlight', cursive;
			font-weight: normal;
        }
		.frankfurter-medium {
			font-family: 'Frankfurter Medium', cursive;
		}
		.schoolbell {
			font-family: 'Schoolbell', cursive;
		}
		.league-spartan {
			font-family: 'League Spartan', sans-serif;
		}

    </style>
</head>
<body>
    <slot />
</body>
</html>
---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Schoolbell&family=League+Spartan:wght@400;700&display=swap" rel="stylesheet">
    <style is:global>
        @font-face {
            font-family: 'Frankfurter Highlight';
            src: url('/src/fonts/frankfurter-highlight.otf') format('opentype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }
        @font-face {
            font-family: 'Frankfurter Medium';
            src: url('/src/fonts/frankfurter-medium.ttf') format('opentype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }
    </style>
    <script>
        import Alpine from 'alpinejs';
        window.Alpine = Alpine;
        Alpine.start();
    </script>
</head>
<body class="bg-gradient-to-r from-white via-pink-100 via-red-100 via-orange-100 to-yellow-100 bg-fixed text-gray-800">
    <slot />
</body>
</html>